<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Widget.PlaylistMaker.View.Main.DayNight"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/yp_white"
            android:textAppearance="@style/TextAppearance.PlaylistMaker.Medium22" />

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginHorizontal="@dimen/margin_m"
        style="@style/Widget.PlaylistMaker.Button.Main"
        android:text="@string/main_search_button"
        app:icon="@drawable/ic_search"/>

    <Button
        android:id="@+id/media_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginHorizontal="@dimen/margin_m"
        style="@style/Widget.PlaylistMaker.Button.Main"
        android:text="@string/main_media_library_button"
        app:icon="@drawable/ic_media_library"/>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_xl"
        android:layout_marginHorizontal="@dimen/margin_m"
        style="@style/Widget.PlaylistMaker.Button.Main"
        android:text="@string/main_settings_button"
        app:icon="@drawable/ic_settings"/>

</LinearLayout>